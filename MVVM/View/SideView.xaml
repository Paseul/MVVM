            <TabControl HorizontalAlignment="Left" Height="236" Margin="0,24,0,0" VerticalAlignment="Top" Width="400">
                <TabItem Header="Status">
                    <Grid Background="White">
                        
                    </Grid>
                </TabItem>
                <TabItem Header="Set">
                    <Grid Background="White">

                    </Grid>
                </TabItem>
                <TabItem Header="Value">
                    <Grid Background="White">
                        <TextBlock HorizontalAlignment="Left" Margin="10,10,0,0" TextWrapping="Wrap" Text="SEED Current" VerticalAlignment="Top"/>
                        <TextBlock HorizontalAlignment="Left" Margin="97,10,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top"/>
                        <TextBlock HorizontalAlignment="Left" Margin="10,31,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Text="SEED LD Temp"/>
                        <TextBlock HorizontalAlignment="Left" Margin="97,31,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" RenderTransformOrigin="0.616,0.501"/>
                        <TextBlock HorizontalAlignment="Left" Margin="10,52,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Text="SEED HS Temp"/>
                        <TextBlock HorizontalAlignment="Left" Margin="97,52,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top"/>

                    </Grid>
                </TabItem>
                
            </TabControl>

        </Grid>
        <Grid Grid.Row="1">
            <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" Text="CHILLER" VerticalAlignment="Top" Height="24" Width="400" Background="#FFDDDDDD" TextAlignment="Center" FontSize="14" FontWeight="Bold"/>
            <TabControl HorizontalAlignment="Left" Height="236" Margin="0,24,0,0" VerticalAlignment="Top" Width="400">
                <TabItem Header="Status">
                    <Grid Background="White">
                        <Button Content="Connect" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="75"/>
                        <Button Content="Run" HorizontalAlignment="Left" Margin="90,10,0,0" VerticalAlignment="Top" Width="75"/>
