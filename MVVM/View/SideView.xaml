                        <Button Content="High Temp1" HorizontalAlignment="Left" Margin="42,107,0,0" VerticalAlignment="Top" Width="75"/>
                        <Button Content="Low Temp1" HorizontalAlignment="Left" Margin="122,107,0,0" VerticalAlignment="Top" Width="75"/>
                        <Button Content="Low Temp2" HorizontalAlignment="Left" Margin="202,107,0,0" VerticalAlignment="Top" Width="75"/>
                        <Button Content="Level Sensor" HorizontalAlignment="Left" Margin="282,107,0,0" VerticalAlignment="Top" Width="75"/>
                        <Button Content="Temp Sensor" HorizontalAlignment="Left" Margin="42,143,0,0" VerticalAlignment="Top" Width="75"/>
                        <Button Content="Flow Switch" HorizontalAlignment="Left" Margin="122,143,0,0" VerticalAlignment="Top" Width="75"/>
                        <Button Content="Flow Meter" HorizontalAlignment="Left" Margin="202,143,0,0" VerticalAlignment="Top" Width="75"/>
                        <Button Content="High Press" HorizontalAlignment="Left" Margin="282,143,0,0" VerticalAlignment="Top" Width="75"/>
                        <Button Content="Low Press" HorizontalAlignment="Left" Margin="42,178,0,0" VerticalAlignment="Top" Width="75"/>
                        <Button Content="Over Current" HorizontalAlignment="Left" Margin="122,178,0,0" VerticalAlignment="Top" Width="75"/>
                        <Button Content="Comp Heat" HorizontalAlignment="Left" Margin="202,178,0,0" VerticalAlignment="Top" Width="75"/>
                        <TextBlock HorizontalAlignment="Left" Margin="22,45,0,0" TextWrapping="Wrap" Text="Ch0 Temp" VerticalAlignment="Top"/>
