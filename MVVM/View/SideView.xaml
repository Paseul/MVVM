            <Button Content="AMP PD" HorizontalAlignment="Left" Margin="20,185,0,0" VerticalAlignment="Top" Width="100" Height="50" FontWeight="Bold" FontSize="14"/>
            <Button Content="CHILLER&#xA;Temp" HorizontalAlignment="Left" Margin="150,185,0,0" VerticalAlignment="Top" Width="100" Height="50" FontWeight="Bold" FontSize="14"/>
            <Button Content="Housing&#xA;Humidity" HorizontalAlignment="Left" Margin="280,185,0,0" VerticalAlignment="Top" Width="100" Height="50" FontWeight="Bold" FontSize="14"/>

        </Grid>
        <Grid Grid.Row="3">
            <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" Text="Emergency Stop" VerticalAlignment="Top" Height="24" Width="400" Background="#FFDDDDDD" TextAlignment="Center" FontWeight="Bold" FontSize="14"/>
            <Button Content="STOP" HorizontalAlignment="Left" Margin="155,100,0,0" VerticalAlignment="Top" Width="100" Height="100" Background="Red" FontWeight="Bold" FontSize="24"/>
        </Grid>
    </Grid>
</UserControl>
